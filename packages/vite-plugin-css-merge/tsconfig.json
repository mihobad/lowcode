{
  "compilerOptions": {
    "outDir": "./dist",
    "declaration": true,
    "lib": ["ES2021", "DOM"],
    "module": "ESNext",
    "strict": true,
    "skipLibCheck": true,
    "isolatedModules": true,
    "resolveJsonModule": true,
    "moduleResolution": "bundler",
    "emitDeclarationOnly": true
  },
  "include": ["src/**/*.ts", "src/**/*.d.ts"]
}
