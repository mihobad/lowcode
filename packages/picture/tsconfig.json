{
  "compilerOptions": {
    "rootDir": "src",
    "outDir": "./dist/types",
    "declarationDir": "./dist/types",
    "declaration": true,
    "jsx": "preserve",
    "jsxImportSource": "vue",
    "lib": ["ES2021", "DOM"],
    "module": "ESNext",
    "strict": true,
    "skipLibCheck": true,
    "isolatedModules": true,
    "resolveJsonModule": true,
    "moduleResolution": "bundler",
    "emitDeclarationOnly": true,
    "baseUrl": "./src",
    "paths": {
      "@/*": ["*"]
    }
  },
  "include": ["src/**/*.ts", "src/**/*.d.ts"]
}
